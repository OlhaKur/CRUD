{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class='main'>

  <section>
    <div class='card'>
      <h1 class='card__title-blue'>Список товарів</h1>
      <div class='product-list'>

        <form method='POST' action='/product-list'>
          <div class='card__content'>
            {{#with data.products}}
              {{#if isEmpty}}
                <mark>Пустий</mark>
              {{else}}
                {{#each list}}

                  <h2>{{name}}</h2>
                  <p>{{description}}</p>
                  <div class='id__info'>
                    <p>ID:{{id}}</p>
                  </div>
                  <div>
                    <h3>{{price}}</h3>
                    <a
                      class='product__button'
                    >Редагувати</a>
                  </div>
                {{/each}}
              {{/if}}
            {{/with}}
          </div>
        </form>
      </div>
    </div>
  </section>
</main>

